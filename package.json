{
  "name": "swimsuit",
  "version": "1.0.0",
  "description": "Detect features using Promise",
  "main": "lib/swimsuit.js",
  "scripts": {
    "pretest": "standard",
    "mocha": "babel-node ./node_modules/.bin/_mocha",
    "mocha:cover": "babel-node ./node_modules/.bin/isparta cover _mocha -- -R spec",
    "test": "npm run mocha:cover",
    "build": "babel src --out-dir lib",
    "prepublish": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swimsuit/swimsuit.git"
  },
  "keywords": [
    "swimsuit",
    "feature",
    "test",
    "feature",
    "test",
    "promise"
  ],
  "author": "Migme (https://mig.me)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/swimsuit/swimsuit/issues"
  },
  "homepage": "https://github.com/swimsuit/swimsuit",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "chai": "^3.5.0",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "1.2.0",
    "standard": "^6.0.8"
  },
  "standard": {
    "ignore": [
      "dist/**"
    ]
  }
